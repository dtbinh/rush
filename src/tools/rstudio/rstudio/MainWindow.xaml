<Window x:Class="rstudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" 
    xmlns:local="clr-namespace:rstudio"
    Title="rStudio" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid x:Name="RenderTarget" Background="{StaticResource RenderSurface}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TreeView Background="#44000000" Grid.Column="1" Width="200" Height="Auto">
                <TreeViewItem Header="Hi"/>
            </TreeView>
        </Grid>
    </Grid>
</Window>
